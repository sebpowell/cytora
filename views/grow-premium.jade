extends  _inc/_layout.jade

block body
	.masthead
		.display-table-cell.vertical-align-middle.height-100.width-100.text-center
			h1.masthead-title Grow premium in the right areas
			p.masthead-sub Identify profitable segments and minimise your exposure to underperforming risks.
			a(href="#" class="button button-brand") Talk to an expert

	.section
		.container
			.margin-bottom-8
				.max-width-700.margin-auto
					p.text-24.text-32-above-medium.text-brand.weight-bold Reveal growth opportunities within your existing portfolio and profitable new segments outside of your exposure.
					p.text-16.text-18-above-medium There are good and bad segments in every area of the market. To identify where to target new business and where to improve risk selection and pricing on the in-force book, you need access to a market-wide view of risks to guide your decision making.
 
					p.text-16.text-18-above-medium The Cytora Risk Engine transforms data from thousands of sources into an exhaustive market-wide view of risk, revealing growth opportunities within your existing portfolio and profitable new segments outside of your exposure.

			.text-center
				a(href="#" class="button button-brand") Read the case study

	.section.background-brand.section-tabs
		.container.max-width-1200
			h2.section-title.text-white Premium growth toolkit
			.solution-tabs
				ul.solution-tabs-navigation
					li
						a.inner.is-active(href="p")
							img.white(src="images/products/white/portfolio-benchmarking.svg")
							img.colour(src="images/products/colour/portfolio-benchmarking.svg")
					li
						a.inner(href="predictive-lead-generation")
							img.white(src="images/products/white/predictive-lead-generation.svg")
							img.colour(src="images/products/colour/predictive-lead-generation.svg")

					li
						a.inner(href="underwriting-micro-segmentation")
							img.white(src="images/products/white/underwriting-micro-segmentation.svg")
							img.colour(src="images/products/colour/underwriting-micro-segmentation.svg")

					li
						a.inner(href="broker-benchmarking")
							img.white(src="images/products/white/broker-benchmarking.svg")
							img.colour(src="images/products/colour/broker-benchmarking.svg")


				.solution-tabs-body.is-open(id="p")					
					.solution-tabs-panel-left
						img.solutions-tabes-panel-logo(src="images/products/colour/portfolio-benchmarking.svg")

						img.solution-tabs-illustration(src="images/illustrations/portfolio-benchmarking.png")

						ul.solution-tabs-indicator
							li.is-active Strategy 
							li Distribution
							li Underwriting
						p.solution-tabs-headline Continuously benchmark the performance of your portfolio against the entire market and adjust your appetite accordingly.

						ul.solutions-tabs-feature-list
							li
								img(src="images/icons/tick.png")
								p Identify segments to grow and shrink in your existing book.
							li
								img(src="images/icons/tick.png")
								p Identify profitable new segments to target outside of your exposure.
					
					.solution-tabs-panel-right.display-table-cell.vertical-align-middle
						img.solution-tabs-illustration(src="images/illustrations/portfolio-benchmarking.png")

				.solution-tabs-body(id="predictive-lead-generation")					
					.solution-tabs-panel-left
						img.solutions-tabes-panel-logo(src="images/products/colour/predictive-lead-generation.svg")
						img.solution-tabs-illustration(src="images/illustrations/predictive-lead-generation.png")
						ul.solution-tabs-indicator
							li Strategy 
							li.is-active Distribution
							li Underwriting
						p.solution-tabs-headline Discover and target the most attractive opportunities within a trade sector or micro-segment that deliver a target loss ratio over time.
						ul.solutions-tabs-feature-list
							li
								img(src="images/icons/tick.png")
								p Provide brokers with a list of high-quality leads enriched with contact and address information that match your appetite.
							li
								img(src="images/icons/tick.png")
								p Target leads in the best performing segments to grow your book in the right areas.
					
					.solution-tabs-panel-right.display-table-cell.vertical-align-middle
						img.solution-tabs-illustration(src="images/illustrations/pricing-automation.png")

				.solution-tabs-body(id="underwriting-micro-segmentation")					
					.solution-tabs-panel-left
						img.solutions-tabes-panel-logo(src="images/products/colour/underwriting-micro-segmentation.svg")
						img.solution-tabs-illustration(src="images/illustrations/underwriting-micro-segmentation.png")
						ul.solution-tabs-indicator
							li.is-active Strategy 
							li Distribution
							li Underwriting
						p.solution-tabs-headline Reveal under-exploited or mispriced micro-segments within your existing book and profitable new micro-segments outside of your exposure and underwriting experience.
						ul.solutions-tabs-feature-list
							li
								img(src="images/icons/tick.png")
								p Instantly differentiate between profitable and unprofitable risks relative to other risks in the same trade sector and strike at the most attractive opportunities.
							li
								img(src="images/icons/tick.png")
								p Focus underwriting resources on the risks you want to win.
					
					.solution-tabs-panel-right.display-table-cell.vertical-align-middle
						img.solution-tabs-illustration(src="images/illustrations/underwriting-micro-segmentation.png")

				.solution-tabs-body(id="broker-benchmarking")					
					.solution-tabs-panel-left
						img.solutions-tabes-panel-logo(src="images/products/colour/broker-benchmarking.svg")
						img.solution-tabs-illustration(src="images/illustrations/broker-benchmarking.png")
						ul.solution-tabs-indicator
							li Strategy 
							li.is-active Distribution
							li Underwriting
						p.solution-tabs-headline Continuously benchmark broker led business against the entire market based on risk quality and ensure you see the best risks from your network.
						ul.solutions-tabs-feature-list
							li
								img(src="images/icons/tick.png")
								p Communicate to underperforming brokers where they are missing the most attractive risks.
							li
								img(src="images/icons/tick.png")
								p Refine your broker network over time.
					
					.solution-tabs-panel-right.display-table-cell.vertical-align-middle
						img.solution-tabs-illustration(src="images/illustrations/broker-benchmarking.png")
				
	+solutions()

	+approach()

	+more()