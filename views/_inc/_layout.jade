	script.
		$(document).ready(function() {

			$(".dropdown-menu").on("click", function(e) {
				e.stopPropagation();
			});

			$(".dropdown").on("click", function() {
				$(this).find(".dropdown-menu").toggleClass("is-open");
			});

			$(".solution-tabs-navigation a").on("click", function(e) {
				
				e.preventDefault();

				$(".solution-tabs-navigation a").removeClass("is-active");

				$(this).addClass("is-active");

				var selected = $(this).attr("href");

				$(".solution-tabs-body").removeClass("is-open");

				$("#"+selected).addClass("is-open");
			});
		});

