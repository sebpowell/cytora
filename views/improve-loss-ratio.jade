extends  _inc/_layout.jade

block body
	.masthead
		.display-table-cell.vertical-align-middle.height-100.width-100.text-center
			h1.masthead-title Select the best risks, set the right price
			p.masthead-sub Continuous portfolio tuning in response to changing market dynamics.
			a(href="#contact" class="button button-brand") Talk to an expert

	.section
		.container
			.margin-bottom-8.text-center
				.max-width-700.margin-auto.text-center
					p.text-24.text-32-above-medium.text-brand.weight-bold Improve your loss ratios by up to 8%
					p.text-16.text-18-above-medium Insurers who have a data and analytics advantage will identify the most profitable segments and compete on winning the best performing risks. The Cytora Risk Engine powers a range of products to improve risk selection, both at the portfolio level and at the point of underwriting.

			.text-center
				a(href="#" class="button button-brand") Read the case study

	.section.background-brand.section-tabs
		.site-container
			h2.section-title.text-white.margin-bottom-6 Improve loss ratio toolkit
			.solution-tabs
				ul.solution-tabs-navigation
					li
						a.inner.is-active(href="submission-scoring")
							.glyph
								img.white(src="#{images}/products/white/glyph/submission-scoring.svg")
								img.colour(src="#{images}/products/green/glyph/submission-scoring.svg")
							.text
								span Submission </br>
								| Enrichment
					li
						a.inner(href="pricing-automation")
							.glyph
								img.white(src="#{images}/products/white/glyph/pricing-automation.svg")
								img.colour(src="#{images}/products/green/glyph/pricing-automation.svg")
							.text
								span Pricing </br>
								| Automation

					li
						a.inner(href="underwriting-micro-segmentation")
							.glyph
								img.white(src="#{images}/products/white/glyph/underwriting-micro-segmentation.svg")
								img.colour(src="#{images}/products/green/glyph/underwriting-micro-segmentation.svg")
							.text
								span Underwriting </br>
								| Micro-segmentation


				.solution-tabs-body.is-open(id="submission-scoring")					
					.solution-tabs-panel-left
						img.solutions-tabes-panel-logo(src="#{images}/products/colour/submission-scoring.svg")

						img.solution-tabs-illustration(src="#{images}/illustrations/submission-scoring.png")

						ul.solution-tabs-indicator
							li Strategy 
							li Distribution
							li.is-active Underwriting
						p.solution-tabs-headline Identify the risk score for every submission, ranked against other similar risks, including those outside of your book.


						ul.solutions-tabs-feature-list
							li
								img(src="#{images}/icons/tick.png")
								p Instantly differentiate between profitable and unprofitable risks relative to other risks in the same trade sector and strike at the most attractive opportunities.
							li
								img(src="#{images}/icons/tick.png")
								p Accurately assess thin-file submissions where traditional models and data sources fail.
					
					.solution-tabs-panel-right.display-table-cell.vertical-align-middle
						img.solution-tabs-illustration(src="#{images}/illustrations/submission-scoring.png")

				.solution-tabs-body(id="pricing-automation")					
					.solution-tabs-panel-left
						img.solutions-tabes-panel-logo(src="#{images}/products/colour/pricing-automation.svg")
						img.solution-tabs-illustration(src="#{images}/illustrations/pricing-automation.png")
						ul.solution-tabs-indicator
							li Strategy 
							li Distribution
							li.is-active Underwriting
						p.solution-tabs-headline Accurate technical pricing for every submission based on market-wide exposure and loss data.
						ul.solutions-tabs-feature-list
							li
								img(src="#{images}/icons/tick.png")
								p Set precise premiums that cover future losses
							li
								img(src="#{images}/icons/tick.png")
								p Accurately price thin-file submissions that are typically overlooked or priced generically
					
					.solution-tabs-panel-right.display-table-cell.vertical-align-middle
						img.solution-tabs-illustration(src="#{images}/illustrations/pricing-automation.png")

				.solution-tabs-body(id="underwriting-micro-segmentation")					
					.solution-tabs-panel-left
						img.solutions-tabes-panel-logo(src="#{images}/products/colour/underwriting-micro-segmentation.svg")
						img.solution-tabs-illustration(src="#{images}/illustrations/underwriting-micro-segmentation.png")
						ul.solution-tabs-indicator
							li.is-active Strategy 
							li Distribution
							li Price
						p.solution-tabs-headline Reveal profit reservoirs within your existing book and attractive new micro-segments outside of your exposure based on changing burn rates and volatility.
						ul.solutions-tabs-feature-list
							li
								img(src="#{images}/icons/tick.png")
								p Set rates accurately for difficult to write micro-segments
							li
								img(src="#{images}/icons/tick.png")
								p Target profitable niches with granular selection decisions which penetrate beneath high-level segments
					
					.solution-tabs-panel-right.display-table-cell.vertical-align-middle
						img.solution-tabs-illustration(src="#{images}/illustrations/underwriting-micro-segmentation.png")
				
	+approach()

	+contact()

	+more('loss-ratios')